{
  "claude": {
    "model": "claude-4-sonnet-20250514",
    "maxTokens": 4000,
    "temperature": 0.1
  },
  "github": {
    "commentMarker": "<!-- README-BOT -->",
    "createReview": false,
    "updateExistingComment": true
  },
  "analysis": {
    "enableValidation": true,
    "skipFiles": [
      "node_modules/**",
      ".git/**", 
      "**/*.min.js",
      "**/dist/**",
      "**/build/**",
      "**/.next/**",
      "**/coverage/**"
    ],
    "priorityRules": {
      "env": "high",
      "dependency": "medium",
      "feature": "medium", 
      "setup": "high",
      "api": "high",
      "architecture": "medium",
      "config": "medium",
      "documentation": "low"
    }
  },
  "output": {
    "format": "github",
    "groupBySeverity": true,
    "includeMetadata": true,
    "verbose": false
  }
}