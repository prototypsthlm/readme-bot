{
  "examples": [
    {
      "name": "Basic Configuration",
      "description": "Simple setup for most projects",
      "config": {
        "claude": {
          "model": "claude-3-5-sonnet-20241022",
          "maxTokens": 4000,
          "temperature": 0.1
        },
        "github": {
          "updateExistingComment": true
        },
        "output": {
          "format": "github",
          "groupBySeverity": true
        }
      }
    },
    {
      "name": "High-Precision Analysis",
      "description": "More thorough analysis with validation",
      "config": {
        "claude": {
          "model": "claude-3-5-sonnet-20241022",
          "maxTokens": 6000,
          "temperature": 0.05
        },
        "analysis": {
          "enableValidation": true,
          "skipFiles": [
            "node_modules/**",
            ".git/**",
            "**/*.min.js",
            "**/dist/**",
            "**/build/**",
            "**/.next/**",
            "**/coverage/**",
            "**/vendor/**"
          ]
        },
        "output": {
          "verbose": true,
          "includeMetadata": true
        }
      }
    },
    {
      "name": "Monorepo Configuration", 
      "description": "Optimized for large monorepo projects",
      "config": {
        "analysis": {
          "skipFiles": [
            "node_modules/**",
            ".git/**",
            "**/dist/**",
            "**/build/**",
            "packages/*/node_modules/**",
            "apps/*/node_modules/**",
            "**/*.generated.*",
            "**/proto/**",
            "**/__generated__/**"
          ],
          "priorityRules": {
            "env": "high",
            "dependency": "low",
            "feature": "high", 
            "setup": "high",
            "api": "high",
            "architecture": "medium"
          }
        },
        "output": {
          "groupBySeverity": true,
          "includeMetadata": false
        }
      }
    },
    {
      "name": "Enterprise Configuration",
      "description": "Conservative settings for enterprise environments",
      "config": {
        "claude": {
          "model": "claude-3-5-sonnet-20241022",
          "maxTokens": 3000,
          "temperature": 0.0
        },
        "github": {
          "createReview": true,
          "updateExistingComment": true,
          "commentMarker": "<!-- ENTERPRISE-README-BOT -->"
        },
        "analysis": {
          "enableValidation": true,
          "priorityRules": {
            "env": "high",
            "dependency": "high",
            "feature": "medium",
            "setup": "high", 
            "api": "high",
            "architecture": "low"
          }
        },
        "output": {
          "format": "github",
          "groupBySeverity": true,
          "verbose": false
        }
      }
    },
    {
      "name": "Open Source Project",
      "description": "Optimized for open source contributions",
      "config": {
        "claude": {
          "maxTokens": 5000
        },
        "analysis": {
          "priorityRules": {
            "env": "medium",
            "dependency": "medium",
            "feature": "high",
            "setup": "high",
            "api": "high", 
            "architecture": "medium",
            "documentation": "medium"
          }
        },
        "github": {
          "updateExistingComment": true,
          "commentMarker": "<!-- OSS-README-BOT -->"
        },
        "output": {
          "format": "github",
          "groupBySeverity": true,
          "includeMetadata": true
        }
      }
    },
    {
      "name": "CLI-Focused Configuration",
      "description": "For developers who primarily use the CLI tool",
      "config": {
        "output": {
          "format": "cli",
          "groupBySeverity": true,
          "verbose": true
        },
        "analysis": {
          "enableValidation": false
        }
      }
    },
    {
      "name": "CI/CD Integration",
      "description": "Optimized for continuous integration workflows",
      "config": {
        "claude": {
          "maxTokens": 3500,
          "temperature": 0.1
        },
        "analysis": {
          "enableValidation": false,
          "skipFiles": [
            "node_modules/**",
            ".git/**",
            "**/*.min.js",
            "**/dist/**",
            "**/build/**",
            "**/.nyc_output/**",
            "**/coverage/**",
            "**/*.log"
          ]
        },
        "github": {
          "createReview": false,
          "updateExistingComment": true
        },
        "output": {
          "format": "github",
          "groupBySeverity": false,
          "includeMetadata": false,
          "verbose": false
        }
      }
    },
    {
      "name": "Documentation-Heavy Project", 
      "description": "For projects with extensive documentation needs",
      "config": {
        "claude": {
          "maxTokens": 6000,
          "temperature": 0.15
        },
        "analysis": {
          "priorityRules": {
            "env": "medium",
            "dependency": "low",
            "feature": "high",
            "setup": "high",
            "api": "high",
            "architecture": "high",
            "documentation": "high"
          }
        },
        "output": {
          "format": "github", 
          "groupBySeverity": true,
          "includeMetadata": true,
          "verbose": true
        }
      }
    }
  ],
  
  "customRuleExamples": [
    {
      "name": "Database Schema Changes",
      "rule": {
        "pattern": "(CREATE TABLE|ALTER TABLE|DROP TABLE)",
        "type": "architecture",
        "priority": "high", 
        "section": "Database Schema"
      }
    },
    {
      "name": "New Service Endpoints",
      "rule": {
        "pattern": "@(Get|Post|Put|Delete|Patch)Mapping",
        "type": "api",
        "priority": "high",
        "section": "API Endpoints"
      }
    },
    {
      "name": "Environment Config",
      "rule": {
        "pattern": "config\\.(get|has)\\(",
        "type": "env",
        "priority": "medium",
        "section": "Configuration"
      }
    },
    {
      "name": "Docker Changes",
      "rule": {
        "pattern": "(FROM|RUN|COPY|ADD)",
        "type": "setup",
        "priority": "high",
        "section": "Docker Setup"
      }
    }
  ],
  
  "environmentExamples": {
    "development": {
      "ANTHROPIC_API_KEY": "sk-ant-api03-...",
      "GITHUB_TOKEN": "ghp_...",
      "CLAUDE_MODEL": "claude-3-5-sonnet-20241022",
      "README_BOT_VERBOSE": "true"
    },
    "production": {
      "ANTHROPIC_API_KEY": "sk-ant-api03-...",
      "GITHUB_TOKEN": "ghp_...",
      "README_BOT_VERBOSE": "false"
    },
    "ci": {
      "ANTHROPIC_API_KEY": "${{ secrets.ANTHROPIC_API_KEY }}",
      "GITHUB_TOKEN": "${{ secrets.GITHUB_TOKEN }}"
    }
  }
}