# README Bot Environment Variables
# Copy this file to .env and fill in your actual values

# Required: Anthropic Claude API Key
# Get one at: https://console.anthropic.com
ANTHROPIC_API_KEY=sk-ant-api03-your-key-here

# GitHub Authentication (choose one method)

# Option 1: Personal Access Token  
# Needs 'repo' scope for private repos, 'public_repo' for public repos
# Generate at: https://github.com/settings/tokens
GITHUB_TOKEN=ghp_your-token-here

# Option 2: GitHub App (recommended for organizations)
# Create a GitHub App at: https://github.com/settings/apps
# GITHUB_APP_ID=123456
# GITHUB_PRIVATE_KEY="-----BEGIN RSA PRIVATE KEY-----\nYour private key here\n-----END RSA PRIVATE KEY-----"
# GITHUB_INSTALLATION_ID=12345678

# Optional: Override default Claude model
# Default: claude-3-5-sonnet-20241022
CLAUDE_MODEL=claude-3-5-sonnet-20241022

# Optional: Enable verbose output
# Default: false
README_BOT_VERBOSE=false

# Optional: Custom config file path
# Default: auto-detected from standard locations
README_BOT_CONFIG_PATH=./custom-config.json

# Optional: Output format for CLI usage
# Options: github, cli, json
# Default: cli (for CLI usage), github (for action usage)
README_BOT_FORMAT=cli